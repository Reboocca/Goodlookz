    <Button x:Name="btnSave" Clicked="UpdateUserInfo" Grid.Row="18" Grid.Column="1" Text="Save" TextColor="Red" BorderWidth="1" BorderRadius="4" BorderColor="Red" BackgroundColor="White" HeightRequest="40"/>
  </Grid>
</ContentPage>