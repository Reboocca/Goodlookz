<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Good_Lookz.View.SignPages.LoginPage"
             Title="Login"
             BackgroundColor="White">
  <StackLayout Padding="20" >
    <StackLayout VerticalOptions="Start">
      <!-- top controls -->
    </StackLayout>

    <StackLayout VerticalOptions="CenterAndExpand" Padding="0, 0, 0, 20">
      <Image Source="goodlookz.png" WidthRequest="150" HeightRequest="150" />
    </StackLayout>

    <StackLayout VerticalOptions="End">
      <Entry x:Name="usrOrMail" Placeholder="Username or Email"/>
      <Entry x:Name="password" Placeholder="Password" IsPassword="True"/>
      <StackLayout Padding="20">
        <Button x:Name="btnLogin"
              Text="Login"
              TextColor="Red"
              BorderWidth="1"
              BorderRadius="4"
              BorderColor="Red"
              BackgroundColor="White"
              HeightRequest="40"
              HorizontalOptions="Center"
              Clicked="LoginClicked"/>
        <ActivityIndicator IsVisible="False" x:Name="loadingLogin" Color="Red" />
      </StackLayout>
    </StackLayout> 
  </StackLayout>
</ContentPage>